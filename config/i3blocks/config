# Global properties
padding=5
separator=true
separator_block_width=20

[wifi]
command=iwctl station wlan0 show | grep "Connected network" | tr -s " "
color=#5fd700
interval=5
separator=false

[ip]
command=iwctl station wlan0 show | grep "IPv4" | tr -s " "
interval=once
color=#5fd700

[day]
command= date '+%a %b %e, %Y';[[ -z "${BLOCK_BUTTON}" ]] || gsimplecal &
interval=30
separator=false

